---
import Layout from '../layouts/Layout.astro';
import filosofosImage from '../assets/filosofos.png';
---

<Layout>
	<div class="contenedor-centrado">
		
		<div class="tarjeta-producto">
			
			<img src={filosofosImage.src} alt="Ilustración de Filósofos" class="imagen-producto" />
			
			<div class="contenido-tarjeta">
				<h2 class="titulo-producto">Grandes Pensadores</h2>
				
				<p class="categoria">Ilustración Histórica</p>

				<p class="precio">60.000 COP</p>
				
				<p class="descripcion">Una colección de retratos de los filósofos más influyentes. Incluye a Platón, Aristóteles, Kant y más.</p>
				
				<button class="boton-pedir">¡Pídalo AHORA mismo!</button>
			</div>

		</div>
	</div>
</Layout>

<style>
	/* 1. CAMBIO IMPORTANTE: YA NO USAMOS FLEXBOX */
	.contenedor-centrado {
		/* display: flex;  <-- ELIMINADO */
		/* justify-content: center; <-- ELIMINADO */
		/* align-items: center; <-- ELIMINADO */
		
		min-height: 100vh;
		background-color: #f0f2f5;
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		
		/* Agregamos padding arriba para que no se pegue al techo */
		padding-top: 50px; 
		padding-bottom: 50px;
	}

	/* 2. Estilo de la Tarjeta */
	.tarjeta-producto {
		background-color: #fffaf0;
		border-radius: 15px;
		overflow: hidden;
		width: 100%;
		max-width: 400px;
		text-align: center;
		box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
		border: 1px solid #e0d8c8;
		
		/* TRUCO PARA CENTRAR SIN FLEXBOX: */
		margin: 0 auto; /* 0 arriba/abajo, auto a los lados (esto la centra) */
	}

	.imagen-producto {
		width: 100%;
		height: auto;
		display: block;
	}

	.contenido-tarjeta {
		padding: 25px;
	}

	.titulo-producto {
		font-size: 1.6rem;
		color: #2c3e50;
		margin: 0 0 5px 0;
	}

	.categoria {
		color: #7f8c8d;
		font-size: 0.9rem;
		margin-bottom: 15px;
	}

	/* 3. EL PRECIO: MÁS GRANDE Y GRUESO */
	.precio {
		font-size: 2rem;      /* Letra mucho más grande */
		font-weight: 900;     /* 900 es el grosor máximo (Extra Bold) */
		color: #c0392b;       /* Rojo intenso para destacar */
		margin: 15px 0;       /* Espacio arriba y abajo */
		letter-spacing: 1px;  /* Un poquito de espacio entre letras */
	}

	.descripcion {
		color: #555;
		font-size: 1rem;
		line-height: 1.6;
		margin-bottom: 25px;
	}

	.boton-pedir {
		background-color: #2c3e50;
		color: white;
		border: none;
		padding: 15px 30px;
		font-size: 1.1rem;
		font-weight: bold;
		border-radius: 5px;
		cursor: pointer;
		width: 100%;
		transition: background-color 0.3s ease;
	}

	.boton-pedir:hover {
		background-color: #34495e;
	}
</style>